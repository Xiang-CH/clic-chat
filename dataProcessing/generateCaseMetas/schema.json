{
    "name": "cases metadata",
    "description": "Extract metadata from cases, and generate information for retrieval",
    "strict": true,
    "parameters": {
        "type": "object",
        "properties": {
            "case_type": {
                "type": "string",
                "description": "Where it is a civic case or a criminal case",
                "enum": ["civic", "criminal"]
            },
            "domain": {
                "type": "string",
                "description": "Specific crimes or legal relations within the domain"
            },
            "case_summary": {
                "type": "string",
                "description": "Summary of the case"
            },
            "case_punishment": {
                "type": "string",
                "description": "Punishment of the case"
            },
            "case_causes": {
                "type": "string",
                "description": "Causes of the case"
            },
            "case_evidence": {
                "type": "string",
                "description": "Evidence of the case"
            },
            "laws": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "cap_no": {
                            "type": "string",
                            "description": "Cap number of the law"
                        },
                        "name":{
                            "type": "string",
                            "description": "Name of the ordinance or regulation"
                        },
                        "sections": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "description": "Sections of the cap"
                            },
                            "description": "Sections of the cap"
                        }
                    }
                },
                "description": "Legislation referred in the case"
            }
        },
        "additionalProperties": false,
        "required": ["case_type", "domain", "case_summary", "case_punishment", "case_causes", "case_evidence", "laws"]
    }
}